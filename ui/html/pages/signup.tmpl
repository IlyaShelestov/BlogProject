{{define "title"}}Sign Up{{end}}

{{define "main"}}
        <h1 class="fw-bold text-center">Sign Up</h1>
        <form
          action="/signup"
          method="POST"
          class="d-flex flex-column justify-content-center align-items-center"
        >
        <input type='hidden' name='csrf_token' value='{{.CSRFToken}}'>
        <div class="d-flex flex-column align-items-end">
            <label for="#username"
            >Username: <input id="username" value="{{.Form.UserName}}" name="username" type="text" required
          /></label>
          <label class="mt-3" for="#password"
            >Password: <input id="password" name="password" type="password" required
          /></label>
        </div>
          {{with .Form.FieldErrors.name}}
          <div class="bg-danger border rounded p-1 mt-3">
            A user with this username already exists.
          </div>
          {{end}}
          <div class="d-flex align-items-center">
            <input class="mt-3 p-2" type="submit" value="Sign Up" />
            <a class="ms-5 pt-3" href="/login">Log In</a>
          </div>
        </form>
{{end}}